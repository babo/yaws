
<erl>

out(A) -> 
    {Code, F} = case queryvar(A, "file") of
		    {ok, Fname} ->
			case file:read_file(
			       A#arg.docroot ++ 
			       yaws_api:sanitize_file_name(Fname)) of
			    {ok, B} ->
				C = {'div', 
				     [],
				     {pre, [], B}},
				{C, Fname};
			    _ ->
				{[], "Can't read " ++ Fname }
			end;
		    undefined ->
			{[], "Bad request"}
		end,
    {ehtml, {html, [],
	     {'div', 
	      [],
	      [{h2, [], F}, 
	       Code]}}}.


</erl>
